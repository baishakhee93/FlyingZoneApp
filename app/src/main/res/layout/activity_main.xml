<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center|end"
        android:paddingEnd="20sp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/singOut"
            android:layout_width="wrap_content"
            android:paddingStart="10sp"
            android:src="@drawable/ic_baseline_power_settings_new_24"
            android:layout_height="match_parent"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:text="WELCOME"
            android:textSize="40sp"
            android:textColor="@color/green"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:text="WELCOME"
            android:textSize="15sp"
            android:textColor="@color/purple_500"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10sp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:elevation="20sp"
            app:cardElevation="20sp"
            app:cardCornerRadius="20sp"
            android:layout_margin="10sp"
            android:layout_height="150sp">
            <LinearLayout
                android:id="@+id/form"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_baseline_assignment_24"
                    android:text="Joining Form"
                    android:layout_margin="10sp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/purple_700"
                    android:layout_height="80dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/myJoinersCard"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_margin="10sp"
                android:elevation="20sp"
                app:cardElevation="20sp"
                app:cardCornerRadius="20sp"
                android:layout_height="150sp">
                <LinearLayout
                    android:id="@+id/myJoinersLl"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/myJoiners"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:drawableTop="@drawable/ic_baseline_format_list_numbered_24"
                        android:text="My Joiners"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_margin="10sp"
                        android:textColor="@color/purple_700"
                        android:layout_height="80dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10sp"
        android:gravity="center"
         android:visibility="visible"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_margin="10sp"
            android:elevation="20sp"
            app:cardElevation="20sp"
            app:cardCornerRadius="20sp"
            android:layout_height="150sp">
            <LinearLayout
                android:id="@+id/contactLayout"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_baseline_contact_mail_24"
                    android:text="Contact For \n Help"
                    android:layout_margin="10sp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/purple_700"
                    android:layout_height="80dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/listCard"
            android:layout_width="match_parent"
        android:layout_margin="10sp"
        android:gravity="center"
         android:visibility="visible"
        android:layout_height="wrap_content">
         <androidx.cardview.widget.CardView
             android:layout_width="0sp"
             android:layout_weight="1"
             android:elevation="20sp"
             app:cardElevation="20sp"
             app:cardCornerRadius="20sp"
             android:layout_margin="10sp"
             android:layout_height="150sp">
             <LinearLayout
                 android:id="@+id/allList"
                 android:layout_width="match_parent"
                 android:background="@color/white"
                 android:gravity="center"
                 android:layout_height="match_parent">
                 <TextView
                     android:layout_width="wrap_content"
                     android:gravity="center"
                     android:drawableTop="@drawable/ic_baseline_format_list_bulleted_24"
                     android:text="All Joiners"
                     android:layout_margin="10sp"
                     android:textStyle="bold"
                     android:textSize="15sp"
                     android:textColor="@color/purple_700"
                     android:layout_height="80dp"/>
             </LinearLayout>
         </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_margin="10sp"
            android:elevation="20sp"
            app:cardElevation="20sp"
            app:cardCornerRadius="20sp"
            android:layout_height="150sp">
            <LinearLayout
                android:id="@+id/searchLayout"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_baseline_manage_search_24"
                    android:text="Search Through  \n Email"
                    android:layout_margin="10sp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/purple_700"
                    android:layout_height="80dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-7106981806500353/6722814428"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" >
        </com.google.android.gms.ads.AdView>
    </LinearLayout>


</LinearLayout>